<div class="page-header">
  <h3><%= @user.username %></h3>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <a href="/buckets/new" class="btn btn-default btn-block"><i class="fa fa-plus"></i>
      </a>
    </div>
  </div>
</div>

<% @user.buckets.each do |bucket| %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= bucket.caption %>
          <small>
            <%= time_ago_in_words(bucket.created_at) %> ago
          </small>
        </h3>
      </div>

      <div class="panel-body">
        <img src="<%= bucket.image %>" class="img-responsive" alt="Responsive image">


  <% if bucket.fans.pluck(:user_id).include? current_user.id %>
  <a href="/users_unlike/<%= bucket.id %>">
    <i class="fa fa-heart"></i></a>
    <% else %>
    <a href="/users_like/<%= bucket.id %>">
      <i class="fa fa-heart-o"></i></a>
      <% end %>

      <ul class="media-list">

        <% bucket.comments.each do |comment| %>
        <li class="media">
          <div class="media-body">
            <h6 class="media-heading">
              <a href="/users/<%= bucket.user_id %>"><%= comment.user.username %></a>
              <small><%= time_ago_in_words(Time.now) %>
              </small>
            </h6>
            <%= comment.body %>
          </div>
        </li>
        <% end %>


        <li class="media">
          <div class="media-body">
            <form action="/create_comment" method="post">
              <input name="authenticity_token" type="hidden" value="form_authenticity_token">
              <input type="hidden" name="bucket_id" value="<%= bucket.id %>">
              <input type="hidden" name="user_id" value="<%= bucket.user_id %>">

              <div class="form-group">
                <label for="body" class="sr-only">
                </label>
                <input type="text" id="body" name="body" placeholder="Add a comment..." class="form-control" required>
              </div>
            </form>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
</div>
<% end %>
