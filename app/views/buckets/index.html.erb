<div class="page-header">
  <h1>
    Buckets
    <a href="/buckets/new" class="btn btn-lg btn-success">New Bucket</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Image</th>
        <th>Caption</th>
        <th>Deadline</th>
        <th>Image2</th>
        <th>Location</th>
        <th>Price range</th>
        <th>Actions</th>
      </tr>

      <% @buckets.each do |bucket| %>
      <tr>
        <td><%= bucket.user_id %></td>
        <td><%= bucket.image %></td>
        <td><%= bucket.caption %></td>
        <td><%= bucket.deadline %></td>
        <td><%= bucket.image2 %></td>
        <td><%= bucket.location %></td>
        <td><%= bucket.price_range %></td>
        <td>
          <a href="/buckets/<%= bucket.id %>" class="btn btn-primary">Show</a>
          <a href="/buckets/<%= bucket.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bucket/<%= bucket.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
